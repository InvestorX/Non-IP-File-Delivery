{
  "Network": {
    "InterfaceName": "eth0",
    "RemoteMacAddress": "00:11:22:33:44:55",
    "CustomEtherType": "0x88B5"
  },
  "Security": {
    "YaraRulesPath": "rules/*.yar",
    "EnableDeepInspection": true,
    "MaxFileSizeMB": 3072,
    "ScanTimeoutMs": 5000
  },
  "Protocols": {
    "Ftp": {
      "Enabled": true,
      "ListenPort": 21,
      "TargetHost": "192.168.1.100",
      "TargetPort": 21
    },
    "Sftp": {
      "Enabled": true,
      "ListenPort": 22,
      "TargetHost": "192.168.1.100",
      "TargetPort": 22
    },
    "Postgresql": {
      "Enabled": true,
      "ListenPort": 5432,
      "TargetHost": "192.168.1.100",
      "TargetPort": 5432
    }
  },
  "Performance": {
    "ReceiveBufferSize": 10000,
    "MaxConcurrentSessions": 100,
    "ThreadPoolMinThreads": 50
  },
  "Logging": {
    "LogLevel": "Debug",
    "RetainDays": 30
  }
}