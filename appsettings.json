{
  "network": {
    "interfaceName": "eth0",
    "remoteMacAddress": "00:11:22:33:44:55",
    "customEtherType": "0x88B5"
  },
  "security": {
    "yaraRulesPath": "rules/*.yar",
    "enableDeepInspection": true,
    "scanTimeout": 5000
  },
  "protocols": {
    "ftp": {
      "enabled": true,
      "listenPort": 21,
      "targetHost": "192.168.1.100",
      "targetPort": 21
    },
    "sftp": {
      "enabled": true,
      "listenPort": 22,
      "targetHost": "192.168.1.100",
      "targetPort": 22
    },
    "postgresql": {
      "enabled": true,
      "listenPort": 5432,
      "targetHost": "192.168.1.100",
      "targetPort": 5432
    }
  },
  "performance": {
    "receiveBufferSize": 10000,
    "maxConcurrentSessions": 100,
    "enableZeroCopy": true
  },
  "logging": {
    "minimumLevel": "Debug",
    "retentionDays": 30
  }
}