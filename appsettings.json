{
  "Network": {
    "InterfaceName": "eth0",
    "RemoteMacAddress": "00:11:22:33:44:55",
    "CustomEtherType": "0x88B5"
  },
  "Security": {
    "YaraRulesPath": "rules/*.yar",
    "EnableDeepInspection": true,
    "Encryption": {
      "Enabled": true,
      "KeyFile": "keys/master.key",
      "KeyPassword": "${ENV:CRYPTO_KEY_PASSWORD}",
      "KeyRotationDays": 90,
      "UsePBKDF2": true,
      "PBKDF2Iterations": 100000
    }
  },
  "Protocols": {
    "Ftp": {
      "ListenPort": 21,
      "TargetHost": "192.168.1.100",
      "TargetPort": 21
    },
    "Sftp": {
      "ListenPort": 22,
      "TargetHost": "192.168.1.100",
      "TargetPort": 22,
      "Enabled": false
    },
    "Postgresql": {
      "ListenPort": 5432,
      "TargetHost": "192.168.1.100",
      "TargetPort": 5432,
      "Enabled": false
    }
  },
  "Performance": {
    "ReceiveBufferSize": 10000,
    "MaxConcurrentSessions": 100
  }
}