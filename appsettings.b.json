{
  "Network": {
    "InterfaceName": "eth1",
    "RemoteMacAddress": "AA:BB:CC:DD:EE:FF",
    "CustomEtherType": "0x88B5"
  },
  "Security": {
    "YaraRulesPath": "rules/*.yar",
    "EnableDeepInspection": true,
    "ScanTimeout": 5000
  },
  "Protocols": {
    "Ftp": {
      "Enabled": true,
      "TargetHost": "192.168.1.100",
      "TargetPort": 21
    },
    "Sftp": {
      "Enabled": true,
      "TargetHost": "192.168.1.100",
      "TargetPort": 22
    },
    "Postgresql": {
      "Enabled": true,
      "TargetHost": "192.168.1.100",
      "TargetPort": 5432
    }
  },
  "Performance": {
    "ReceiveBufferSize": 10000,
    "MaxConcurrentSessions": 100,
    "EnableZeroCopy": true
  },
  "Logging": {
    "MinimumLevel": "Debug",
    "RetentionDays": 30
  }
}
